<h1>Create a New Pokemon Party</h1>

<%= form_for(@party) do |f| %>

    <label>Party Name:</label>
    <%= f.text_field :name %><br>

    <label>Trainer Name:</label>
    <%= collection_select(:party, :trainer_id, Trainer.order(:id), :id, :name, include_blank: true) %><br>

    <label>Select 6 Pokemon:</label>
    <%= collection_check_boxes(:party, :pokemon_ids, Pokemon.all, :id, :nickname) %><br>

    <%= f.submit %>
<% end %>